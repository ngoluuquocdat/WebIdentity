@using Web2FA.Models.AccountViewModels;

@model ForgotPasswordViewModel

<header>
    <link rel="stylesheet" href="~/css/ForgotPassword.css" asp-append-version="true" />
</header>
<div class="forgot-password-container">
    <div class="row">
        <div class="col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Forgot Password?</h2>
                        <p>Please provide your email to get the reset password link.</p>
                        <div class="panel-body">
                            <form asp-action="ForgotPassword" class="form" method="post">
                                <div class="form-group">
                                    <input asp-for="Email" id="email" name="email" placeholder="email address" class="form-control" type="email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group">
                                    <button name="recover-submit" class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
                                </div>
                                <div class="form-group">
                                    <a asp-controller ="Account" asp-action="Login" style="color: #e18c5c; cursor: pointer;" name="recover-submit" class="">&larr; Back to login</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
