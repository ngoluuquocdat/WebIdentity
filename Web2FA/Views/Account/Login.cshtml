﻿@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Web2FA.Models.AccountViewModels;

@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <title>Web Identity</title>
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section"></h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Have an account?</h3>
                        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]"
                              method="post" class="signin-form">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Email" class="form-control" placeholder="Email" required data-listener-added_d078d6af="true">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" id="password-field" type="password" class="form-control" placeholder="Password" required="">
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">Remember Me
                                        <input asp-for="RememberMe" type="checkbox" checked="">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                     <a asp-action="ForgotPassword" style="color: #fff">Forgot Password</a>
                                </div>
                            </div>
                        </form>
                    <p class="w-100 text-center">— Or Sign In With —</p>
                    <div class="social d-flex text-center">
                        <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                        <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                    </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-bottom">
                <div class="register-navigation">
                    <p class="w-100 text-center">Don't have an account? 
                        <a asp-controller="Account" asp-action="Register">Create one now!</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
</body>