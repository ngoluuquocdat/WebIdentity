@using Web2FA.Services.Email;

@model VerificationCodeModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Identity Two-Factor Authentication Verification</title>
</head>
<body>
    <div style="font-family: 'Arial', sans-serif; max-width: 600px; margin: 0 auto; padding: 20px;">
        <h2>Web Identity Two-Factor Authentication Verification</h2>
        <p>Hi,</p>
        <p>You are receiving this email because you have enabled two-factor authentication for your account.</p>
        <p>Your verification code is: <strong>@Model.VerificationCode</strong></p>
        <p>Please use the code to complete the authentication process.</p>
        <p>If you didn't request this verification, you can ignore this email.</p>
        <p>Thank you!</p>
    </div>
</body>
</html>
